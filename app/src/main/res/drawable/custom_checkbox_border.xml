<!-- custom_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#88FFFFFF" /> <!-- Set checked color to white -->
            <!-- You might want to include additional customization for the checked state -->
        </shape>
    </item>
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#C3FFFFFF" /> <!-- Set unchecked color to transparent -->
            <!-- You might want to include additional customization for the unchecked state -->
        </shape>
    </item>
</selector>