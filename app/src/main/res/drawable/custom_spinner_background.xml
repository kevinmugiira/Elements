<!-- custom_spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border and Background -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#C3FFFFFF" /> <!-- Border color white -->
            <solid
                android:color="#00000000" /> <!-- Transparent background -->
            <corners
                android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Dropdown Arrow -->
    <item
        android:gravity="end|center_vertical"
        android:right="8dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_dropdown_arrow" /> <!-- Replace with your arrow drawable -->
    </item>
</layer-list>